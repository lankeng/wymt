/**index.wxss**/

/*三级导航*/

page {
  height: 100%;
   background: #F2F2F2;
}

.page {
  font-family: 'PingFang SC',
  'Helvetica Neue',
  Helvetica,
  'Droid Sans Fallback',
  'Microsoft Yahei',
  sans-serif;
  height: 100%;
  background: #F2F2F2;
  position: relative;
}
.top-location{
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 9999;
}

.nav {
  position: relative;
  z-index: 99;
  display: flex;
  background: #fc0;
}

.nav-son {
  display: flex;
  flex: 1;
  text-align: center;
  height: 88rpx;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  color: #b95b0e;
}

/* .borders{
    border-left: 1px solid #e6e6e6;
    border-right: 1px solid #e6e6e6;
} */

.content {
  display: inline-block;
}

.icon {
  display: inline-block;
  border: 4px solid transparent;
  border-top: 4px solid #b95b0e;
  margin-left: 21rpx;
  margin-top:10rpx;
}

.temp {
  position: relative;
  z-index: 4;
}

.temp1 {
  display: none;
  width: 100%;
  max-height: 550rpx;
  overflow-y: scroll;
  padding: 0 0 0 30rpx;
  line-height: 100rpx;
  background: #fff;
}

.temp2 {
  display: none;
  width: 100%;
  max-height: 750rpx;
  overflow-y: scroll;
  padding: 0 0 0 30rpx;
  line-height: 100rpx;
  background: #fff;
}

.slidedown {
  transform: translateY(0%);
}

.temp {
  color: #333;
}

.temp view {
  border-bottom: 1px solid #eee;
  font-size: 14px;
}

.active_color {
  color: #ffd119;
}

.current {
  color: #0097ff;
}

.content .search {
  width: 36rpx;
  height: 36rpx;
}

.current2 {
  color: #0097ff;
}

.fullbg {
  position: fixed;
  top: 106rpx;
  z-index: 1;
  width: 100%;
  height: 100%;
  background: rgb(1, 1, 1);
  transition: all 2s;
  opacity: 0;
  display: none
}

.fullopacity {
  opacity: 0.5;
  display: block
}

.nav-son.active .content {
  color: #b95b0e;
}

.nav-son.active .icon {
  border-bottom: 4px solid #b95b0e;
  border-top: 0;
}

@keyframes slidown {
  from {
    transform: translateY(-100%);
  }

  to {
    transform: translateY(0%);
  }
}

.slidown {
  display: block;
  animation: slidown 0.2s ease-in both;
  z-index: 5;
  padding-bottom: 100rpx;
}

@keyframes slidup {
  from {
    transform: translateY(0%);
  }

  to {
    transform: translateY(-100%);
  }
}

.slidup {
  display: none;
  animation: slidup 0.2s ease-in both;
}

.disappear {
  display: none;
}

.picture-list {
  width: 98%;
  column-count: 2;
  column-gap: 10rpx;
  margin: 0 auto;
  padding: 100rpx 0rpx 15rpx;
  box-sizing: border-box;
}

.picture-car {
 margin-bottom: 20rpx;
  width: 98%;
  height: 100%;
  overflow: auto;
  background: #fff;
  display: inline-block;
  border-radius: 14rpx;
 
}

.picture-car-content {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

.picture-car-title {
  font-size: 26rpx;
  padding: 20rpx 16rpx 0;
  font-weight: bold
}

.picture-car image {
  width: 100%;
  height: 100%;
}

.picture-car .img {
  width: 100%;
  height: 100%;
}

.picture-car-price {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  box-sizing: border-box;
  margin: 0 20rpx;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}

.picture-car-price .car-price {
  font-size: 36rpx;
  color: #e05447;
}

.car-price .symbol {
  font-size: 22rpx;
  font-weight: 500;
}

.picture-car-price .car-state {
  padding: 8rpx 10rpx 2rpx;
  border-radius: 6rpx;
  font-size: 26rpx;
  color: #999999;
}
.picture-car-price .car-state-green{
  color: #09BB07;
}
.picture-car-price .car-state-darkred{
  color: #E05447;
}

