/* pages/my/account/account.wxss */
page {
  background: #f5f5f5;
}

.account-box {
  width: 100%;
  height: 300rpx;
  background: -webkit-linear-gradient(#FFCC00,#FFCC00);
  background: -o-linear-gradient(#FFCC00, #FFCC00);
  background: -moz-linear-gradient(#FFCC00, #FFCC00);
  background: linear-gradient(#FFCC00, #FFCC00);
  padding-top: 70rpx;
  box-sizing: border-box;
}

.balance {
  display: flex;
  justify-content: center;
  text-align: center;
}

.balance .balance-title {
  color: #000000;
  font-size: 24rpx;
  margin-bottom: 10rpx;
  padding-left: 14rpx;
  font-weight: 500
}
.balance .balance-title-color{
  display: inline-block;
  color: #BF650D;
  padding: 10rpx;
}

.balance .balance-number {
  font-size: 80rpx;
  color: #fff;
  font-family: ReznorDownwardSpiral;
  font-weight: bold;
}

.account-record {
  display: flex;
  flex-direction: column;
}
.boxes-item {
  padding: 0 30rpx 3rpx;
  margin-bottom: 3rpx;
  flex-direction: row;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: left;
  background: #fff;
  box-sizing:border-box;
  position: relative;
}

.boxes-item .boxes-item-imgae {
  display: inline-block;
  width: 32rpx;
  height: 32rpx;
  padding-right: 23rpx;
  position: relative;
  top: 6rpx;
}

.boxes-item .boxes-item-text {
  display: inline-block;
  font-size: 30rpx;
  color: #333;
}

/* 功能封装4：箭头 */
.arrow{
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.arrow::after{
    content: "";
    width: 15rpx;
    height: 15rpx;
    border-top: 3rpx solid #c0c0c0;
    border-right: 3rpx solid #c0c0c0;
    transform: rotate(45deg);
}