/* pages/my/editinfo/editinfo.wxss */
@import '../../../citymdoel/citymdoel.wxss';
page {
  background:#fff;
}
.info-items {
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #f5f5f5;
  padding: 42rpx 20rpx 42rpx 30rpx;
}

.info-items::last-child {
  border: none;
}

.info-items .info-title {
  display: inline-block;
  color: #333;
  font-size: 30rpx;
}
.info-items-height{
  padding:10rpx 20rpx 22rpx 30rpx;
}

.info-padding {
  padding-top: 50rpx;
}

.userinfo-view {
  display: flex;
  justify-content: space-between;
  
}
.infoText{
  margin-top: 0;
  width: 60%;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}
.infoText .userinfo-images {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: #FFD119;
  margin-right: 20rpx;
  background-size:"cover";
  border: 1rpx solid #CCC;
}

.infoText .menu-item-arrow {
  position: relative;
  top: 6rpx;
  right: 0;
  width: 32rpx;
  height: 32rpx;
}

.infoText .arrowright {
  position: relative;
  top: 45rpx;
  right: 0;
}

.infoText .info-motto {
  font-size: 30rpx;
  color: #B95B0E;
  padding-right: 10rpx;
}
.infoText .info-input{
  width: 100%;
  font-size: 30rpx;
  color:#B95B0E;
  padding-right: 40rpx;
  text-align: right;
}
.seletor{
  line-height: 40rpx;
  text-align: right;
}


.outborder {
  border-bottom: 0rpx;
}

.info-btn {
  padding: 42rpx 10rpx; 
}
.suc-save{
  width: 100%;
  height: 64rpx;
  background-color: #09BB07;
  text-align: center;
  color: #FFFFFF;
  font-size: 24rpx;
  line-height: 64rpx;
  position: fixed;
  top: 0;
  z-index: 11;
  opacity: 0;
}